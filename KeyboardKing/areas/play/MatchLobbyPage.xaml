<local:JumpPage x:Class="KeyboardKing.areas.play.MatchLobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeyboardKing.core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MatchLobbyPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Style="{DynamicResource GridBorder}" Margin="14,0,0,0" HorizontalAlignment="Left" Width="675"></Border>
        <Label Style="{DynamicResource H1}" Content="MatchLobbyPage" HorizontalAlignment="Left" Margin="49,51,0,0" VerticalAlignment="Top"/>
        <Label Style="{DynamicResource H2}" Name="lEpisodeMatch" HorizontalAlignment="Left" VerticalAlignment="Top" Width="255" Height="50" Margin="224,95,0,0"/>
        <ListView Name="LvMatch" Height="250" Width="450" Margin="120,145,119,55">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding UsernameUsers}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</local:JumpPage>
