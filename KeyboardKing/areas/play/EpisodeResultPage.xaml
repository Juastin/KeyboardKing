<local:JumpPage
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeyboardKing.core"
      xmlns:Components="clr-namespace:KeyboardKing.components"
      xmlns:Model="clr-namespace:Model" x:Class="KeyboardKing.areas.play.EpisodeResultPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EpisodeResultPage" HorizontalAlignment="Center" VerticalAlignment="Center">

    <local:JumpPage.DataContext>
        <Model:EpisodeResultPageDataContext/>
    </local:JumpPage.DataContext>

    <Grid>
        <Border Style="{DynamicResource GridBorder}"
            Padding="30" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Height="400" Width="750" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" VerticalAlignment="Center">
                    <Label Style="{DynamicResource H1}" HorizontalAlignment="Left" Content="Results"/>
                    <Label Style="{DynamicResource H1}" HorizontalAlignment="Left" Content="Winner" Margin="466,0,0,0"/>
                </Grid>
                <Grid Grid.Row="1" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" MinWidth="220"/>
                        <ColumnDefinition Width="auto" MinWidth="151.77"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <Label  Style="{DynamicResource H3}" Content="Score:" 
                               VerticalAlignment="Center"/>
                        <Label  Style="{DynamicResource H3}" Content="Tijd:" 
                               VerticalAlignment="Center"/>
                        <Label  Style="{DynamicResource H3}" Content="Fouten" 
                               VerticalAlignment="Center"/>
                        <Label  Style="{DynamicResource H3}" Content="Letters per minuut:" 
                               VerticalAlignment="Center"/>

                    </StackPanel>
                    <StackPanel Margin="10,0,10,0"  Grid.Column="1" Orientation="Vertical">
                        <Label Style="{DynamicResource H3}" Content="{Binding Score}" HorizontalAlignment="Left"/>
                        <Label Style="{DynamicResource H3}" Content="{Binding Time}" HorizontalAlignment="Left"/>
                        <Label Style="{DynamicResource H3}" Content="{Binding Mistakes}" HorizontalAlignment="Left"/>
                        <Label Style="{DynamicResource H3}" Content="{Binding LettersPerMinute}" HorizontalAlignment="Left"/>
                    </StackPanel>
                    <Border Style="{DynamicResource GridBorder}" CornerRadius="5" Grid.Column="2" >
                        <!-- CONTENT SPACE FOR THE PODIUM -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.RowSpan="2" Grid.ColumnSpan="3">
                                <Image Source="/resources/images/podium.png"  VerticalAlignment="Top" HorizontalAlignment="Center" Height="119" Margin="0,49,0,0" Width="276" Panel.ZIndex="1"/>
                            </Grid>
                            <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Column="0">
                                <TextBlock TextWrapping="Wrap" Margin="-24,-3,-60,3" TextAlignment="Center">
                                    <Run Text="winnaar2"/>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="-24,74,-60,-73" TextAlignment="Center">
                                    <Run Text="940p"/>
                                </TextBlock>
                            </Grid>
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                                <TextBlock TextWrapping="Wrap" Margin="-42,0,-42,4" TextAlignment="Center">
                                    <Run Text="winnaar1"/>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="-42,109,-42,-106" TextAlignment="Center">
                                    <Run Text="1040p"/>
                                </TextBlock>
                            </Grid>
                            <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Column="2">
                                <TextBlock TextWrapping="Wrap" Margin="-62,18,-22,-17" TextAlignment="Center">
                                    <Run Text="winnaar3"/>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="-62,74,-22,-72" TextAlignment="Center">
                                    <Run Text="720p"/>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Row="2" VerticalAlignment="Bottom">
                    <Components:NavigationButton ToPage="ChaptersPage" Style="{DynamicResource Button1}" Content="Voltooi episode" HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</local:JumpPage>