<local:JumpPage
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeyboardKing.core"
      xmlns:Model="clr-namespace:Model" x:Class="KeyboardKing.areas.play.EpisodePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EpisodePage">

    <local:JumpPage.DataContext>
        <Model:EpisodePageDataContext/>
    </local:JumpPage.DataContext>

    <Grid x:Name="Container">
        <TextBox x:Name="UserInput" Background="Transparent" Foreground="Transparent" Grid.Column="0" LostFocus="UserInput_LostFocus" Text="" TextChanged="UserInput_TextChanged"/>
        <Label x:Name="Label" Content="EpisodePage" HorizontalAlignment="Left" Margin="49,51,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextFormattingMode="Display">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="Word" Content="{Binding Word}" Foreground="White" FontSize="50"/>
            <Label Grid.Column="0" x:Name="WordOverlay" Content="{Binding WordOverlay}" Foreground="Green" FontSize="50" Panel.ZIndex="10"/>
        </Grid>
    </Grid>
</local:JumpPage>
