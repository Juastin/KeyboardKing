<local:JumpPage
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeyboardKing.core"
      xmlns:Model="clr-namespace:Model" x:Class="KeyboardKing.areas.play.EpisodePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MaxHeight="600"
      MaxWidth="1450"
      Title="EpisodePage" PreviewKeyDown="PreventTab_PreviewKeyDown" ForceCursor="True" Cursor="Arrow">

    <local:JumpPage.DataContext>
        <Model:EpisodePageDataContext/>
    </local:JumpPage.DataContext>

    <Grid x:Name="Container">
        <Border Style="{DynamicResource GridBorder}"/>
        <Label Style="{DynamicResource H1}" Content="" Margin="49,51,301,336"/>
        <TextBox x:Name="UserInput" Background="Transparent" Foreground="Transparent" Grid.Column="0" LostKeyboardFocus="UserInput_LostFocus" Text="" TextChanged="UserInput_TextChanged" SelectionBrush="{x:Null}" BorderThickness="0,0,0,0"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextFormattingMode="Display">
            <Label x:Name="Word" Content="{Binding Word}" Foreground="Black" FontSize="50"/>
            <Label x:Name="WordOverlayWrong" Content="{Binding WordOverlayWrong}" Foreground="Red" FontSize="50"/>
            <Label x:Name="WordOverlayCorrect" Content="{Binding WordOverlayCorrect}" Foreground="Green" FontSize="50"/>
        </Grid>
    </Grid>
</local:JumpPage>
