<local:JumpPage x:Class="KeyboardKing.areas.login.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeyboardKing.core" xmlns:components="clr-namespace:KeyboardKing.components"
                mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage1">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBox Name="error" HorizontalAlignment="Left" Margin="296,69,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Height="56" Background="{x:Null}" BorderBrush="Black" FontSize="20" Foreground="White" IsReadOnly="True" IsHitTestVisible="False"/>

        <Label Content="Registreren" HorizontalAlignment="Left" Margin="49,51,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36"/>
        <Label Content="E-mail:" HorizontalAlignment="Left" Margin="70,145,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" Height="40" Width="82"/>
        <Label Content="Gebruikersnaam:" HorizontalAlignment="Left" Margin="70,222,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" Height="40" Width="161"/>
        <Label Content="Wachtwoord:" HorizontalAlignment="Left" Margin="70,298,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" Height="40" Width="161"/>

        <TextBox HorizontalAlignment="Left" Margin="309,145,0,0" Name="txtemail"  TextWrapping="Wrap" VerticalAlignment="Top" Width="334" Height="48" FontSize="20" Foreground="White"  Background="#FF363636"  BorderBrush="White" VerticalContentAlignment="Center"  Padding="10"/>
        <TextBox HorizontalAlignment="Left" Margin="309,222,0,0" Name="txtusername"  TextWrapping="Wrap" VerticalAlignment="Top" Width="199" Height="48" FontSize="20" Foreground="White"  Background="#FF363636"  BorderBrush="White" VerticalContentAlignment="Center" Padding="10"/>


        <PasswordBox HorizontalAlignment="Left" Margin="309,298,0,0" Name="password1"  VerticalAlignment="Top" Width="199" Height="48" FontSize="20" Foreground="White"  Background="#FF363636"  BorderBrush="White" VerticalContentAlignment="Center"  Padding="10" />
        <PasswordBox HorizontalAlignment="Left" Margin="556,298,0,0" Name="password2"  VerticalAlignment="Top" Width="199" Height="48" FontSize="20" Foreground="White"  Background="#FF363636"  BorderBrush="White" VerticalContentAlignment="Center" Padding="10" RenderTransformOrigin="0.548,1.021"/>

        <components:NavigateButton ToPage="LoginPage" Content="Ga naar login" HorizontalAlignment="Left" Margin="49,376,0,0" VerticalAlignment="Top" Height="51" Width="164" Background="#FF363636" BorderBrush="White" Foreground="White" FontSize="20"/>
        <!--
        <Button Content="Ga naar login" Tag="LoginPage" Click="ButtonNavigate" HorizontalAlignment="Left" Margin="49,376,0,0" VerticalAlignment="Top" Height="51" Width="164" Background="#FF363636" BorderBrush="White" Foreground="White" FontSize="20"/>
        -->

        <Button Content="Registreer" Click="BRegister" HorizontalAlignment="Left" Margin="591,376,0,0" VerticalAlignment="Top" Height="51" Width="164" Background="#FF363636" BorderBrush="White" Foreground="White" FontSize="20"/>
    </Grid>
</local:JumpPage>