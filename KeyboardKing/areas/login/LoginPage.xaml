<local:JumpPage x:Class="KeyboardKing.areas.login.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeyboardKing.core" xmlns:components="clr-namespace:KeyboardKing.components"
                mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="error" HorizontalAlignment="Left" Margin="296,69,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Height="56" Background="{x:Null}" BorderBrush="Black" FontSize="20" Foreground="White" IsReadOnly="True" IsHitTestVisible="False"/>
        <Label Content="Inloggen" HorizontalAlignment="Left" Margin="49,51,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36"/>

        <Label Content="E-mail:" HorizontalAlignment="Left" Margin="70,155,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25" Height="40" Width="82"/>
        <Label Content="Wachtwoord:" HorizontalAlignment="Left" Margin="70,232,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25" Height="40" Width="155"/>

        <TextBox Name="txtEmail" HorizontalAlignment="Left" Margin="309,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="398" Height="48" FontSize="20" Foreground="White"  Background="#FF363636"  BorderBrush="White" VerticalContentAlignment="Center" Padding="10"/>
        <PasswordBox Name="boxPassword" HorizontalAlignment="Left" Margin="309,232,0,0" VerticalAlignment="Top" Width="398" Height="48" FontSize="20" Foreground="White"  Background="#FF363636"  BorderBrush="White" VerticalContentAlignment="Center" Padding="10"/>

        <Button Content="Login" Tag="SettingsPage" Click="BLogin" HorizontalAlignment="Left" Margin="591,376,0,0" VerticalAlignment="Top" Height="53" Width="150" Background="#FF363636" BorderBrush="White" Foreground="White" FontSize="20"/>
        <Button Content="Registreer" Tag="RegisterPage" Click="BToRegistration" HorizontalAlignment="Left" Margin="49,376,0,0" VerticalAlignment="Top" Height="51" Width="164" Background="#FF363636" BorderBrush="White" Foreground="White" FontSize="20"/>
    </Grid>
</local:JumpPage>